            { text: "Perfecto. Tengo disponible a las 4:00 PM y 5:30 PM. 쮺u치l prefieres?", type: "bot", delay: 6000 }
        ];

        const chatContainer = document.getElementById('chatDemo');

        function playChat() {
            chatContainer.innerHTML = '';
            let currentTime = 0;

            messages.forEach(msg => {
                currentTime += msg.delay;
                setTimeout(() => {
                    const div = document.createElement('div');
                    div.className = `chat-bubble bubble-${msg.type}`;
                    div.innerText = msg.text;
                    chatContainer.appendChild(div);
                }, currentTime); // Use running total
            });
        }
        
        // Loop animation
        playChat();
        setInterval(playChat, 12000); // Reset every 12s

        // Modal Logic
