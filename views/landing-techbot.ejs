    <script>
        // Chat Animation
        const messages = [
            { text: "Hola, quisiera agendar una cita", type: "user", delay: 1000 },
            { text: "춰Hola! Claro que s칤 游녦 Soy el asistente virtual de TechBot. 쯇ara qu칠 d칤a te gustar칤a?", type: "bot", delay: 2500 },
